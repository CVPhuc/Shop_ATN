<div class="mt-4">
    <h3>Update Product</h3>


    <form method="POST" action="/product/{{product._id}}" , enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name Product</label>
            <input type="text" class="form-control" id="exampleInputEmail1"  value="{{product.name}}" name="name">
        </div>
        <div class="form-group">
            <label for="des">Description Product</label>
            <input type="text" class="form-control" id="exampleInputEmail1" value="{{product.des}}" name="des">
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Category</label>
            <select class="form-control" id="exampleFormControlSelect1" name="cate">
                    
                {{#each category}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="des">Img</label>
            <input type="file" class="form-control-file" id="exampleInputEmail1" value="{{product.img}}" name="img">
        </div>

        <div class="form-group">
            <label for="des">Price Product</label>
            <input type="number" class="form-control" id="exampleInputEmail1" value="{{product.price}}" name="price">
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>


</div>